<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.iglooproject.components</groupId>
		<artifactId>igloo-components</artifactId>
		<version>3.1.0-SNAPSHOT</version>
	</parent>

	<artifactId>igloo-component-wicket-bootstrap4</artifactId>
	
	<name>Igloo - Component - Wicket - Bootstrap 4</name>

	<properties>
		<processor.test.skip>true</processor.test.skip>
	</properties>

	<dependencies>
		<!-- Igloo dependencies -->
		
		<dependency>
			<groupId>org.iglooproject.components</groupId>
			<artifactId>igloo-component-wicket-more</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.iglooproject.components</groupId>
			<artifactId>igloo-component-jpa-security</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.iglooproject.components</groupId>
			<artifactId>igloo-component-export</artifactId>
			<version>${project.version}</version>
		</dependency>
		
		<dependency>
			<groupId>org.iglooproject.dependencies</groupId>
			<artifactId>igloo-dependency-web-spring-security</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
		</dependency>
		
		<!-- WiQuery -->
		
		<dependency>
			<groupId>org.wicketstuff.wiquery</groupId>
			<artifactId>wiquery-core</artifactId>
		</dependency>
		
		<dependency>
			<groupId>org.wicketstuff.wiquery</groupId>
			<artifactId>wiquery-jquery-ui</artifactId>
		</dependency>
		
		<!--
		Nécessaire car déclaré provided dans wiquery, ce qui ne suffit pas
		See http://code.google.com/p/wiquery/issues/detail?id=148
		-->
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>javax.servlet-api</artifactId>
			<scope>provided</scope>
		</dependency>
		
		<!-- SCSS -->
		
		<dependency>
			<groupId>io.bit3</groupId>
			<artifactId>jsass</artifactId>
		</dependency>
		
		<!-- Ph-CSS + JSoup (used to style the HTML notifications) -->
		<dependency>
			<groupId>com.helger</groupId>
			<artifactId>ph-css</artifactId>
		</dependency>
		
		<dependency>
			<groupId>org.jsoup</groupId>
			<artifactId>jsoup</artifactId>
		</dependency>
		
		<!-- Test -->
		
		<dependency>
			<groupId>org.iglooproject.dependencies</groupId>
			<artifactId>igloo-dependency-test</artifactId>
			<type>pom</type>
		</dependency>
		<dependency>
			<groupId>org.iglooproject.dependencies</groupId>
			<artifactId>igloo-dependency-core-logging-log4j2</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
			<scope>test</scope>
		</dependency>
	</dependencies>
	
	<build>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</resource>
			<resource>
				<directory>src/main/resources</directory>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/java</directory>
				<excludes>
					<exclude>**/*.java</exclude>
				</excludes>
			</testResource>
			<testResource>
				<directory>src/test/resources</directory>
			</testResource>
		</testResources>
		
		<plugins>
			<plugin>
				<groupId>org.bsc.maven</groupId>
				<artifactId>maven-processor-plugin</artifactId>
			</plugin>
		</plugins>
	</build>

</project>
