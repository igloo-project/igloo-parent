<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<artifactId>igloo-dependencies</artifactId>
		<groupId>org.iglooproject.dependencies</groupId>
		<version>1.8.0-SNAPSHOT</version>
	</parent>
	
	<artifactId>igloo-dependency-test</artifactId>
	<packaging>pom</packaging>
	
	<name>Igloo - Dependency - Test</name>
	
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-core</artifactId>
			<exclusions>
				<exclusion>
					<groupId>net.bytebuddy</groupId>
					<artifactId>byte-buddy</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		<dependency>
			<groupId>net.bytebuddy</groupId>
			<artifactId>byte-buddy</artifactId>
		</dependency>
		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-guava</artifactId>
		</dependency>
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-test</artifactId>
		</dependency>
		<dependency>
			<groupId>com.h2database</groupId>
			<artifactId>h2</artifactId>
		</dependency>
	</dependencies>
	
	<profiles>
		<profile>
			<id>allure</id>
			<activation>
				<property>
					<name>allure.enabled</name>
					<value>true</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>io.qameta.allure</groupId>
					<artifactId>allure-junit4</artifactId>
					<version>${igloo.allure-junit4.version}</version>
					<scope>compile</scope>
				</dependency>
				<dependency>
					<groupId>com.tngtech.java</groupId>
					<artifactId>junit-dataprovider</artifactId>
					<version>${igloo.junit-dataprovider.version}</version>
					<scope>compile</scope>
				</dependency>
				<!-- re-added as ignored in allure-junit for dependency convergence -->
				<dependency>
					<groupId>com.fasterxml.jackson.module</groupId>
					<artifactId>jackson-module-jaxb-annotations</artifactId>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
</project>
