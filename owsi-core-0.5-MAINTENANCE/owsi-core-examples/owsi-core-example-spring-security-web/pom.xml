<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>fr.openwide.core.examples</groupId>
		<artifactId>owsi-core-examples</artifactId>
		<version>0.5.4-SNAPSHOT</version>
	</parent>

	<groupId>fr.openwide.core.examples</groupId>
	<artifactId>owsi-core-example-spring-security-web</artifactId>
	<version>0.5.4-SNAPSHOT</version>
	<packaging>war</packaging>

	<name>OWSI Core - Example - Spring Security</name>

	<dependencies>
		
		<!-- OWSI Core -->
		
		<dependency>
			<groupId>fr.openwide.core.packages</groupId>
			<artifactId>owsi-core-package-web-spring-security</artifactId>
			<version>${project.version}</version>
			<type>pom</type>
		</dependency>
	
		<!-- Spring Security -->
		
		<dependency>
			<groupId>org.springframework.security</groupId>
			<artifactId>spring-security-taglibs</artifactId>
			<version>${owsi-core.spring-security.version}</version>
		</dependency>

		<!-- Spring MVC -->
		
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-webmvc</artifactId>
			<version>${owsi-core.spring.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-core</artifactId>
				</exclusion>
			</exclusions>
		</dependency>
		
		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-web</artifactId>
			<version>${owsi-core.spring.version}</version>
			<exclusions>
				<exclusion>
					<groupId>org.springframework</groupId>
					<artifactId>spring-core</artifactId>
				</exclusion>
			</exclusions>
		</dependency>

		<!-- Miscellaneous -->
		
		<dependency>
			<groupId>javax.servlet</groupId>
			<artifactId>jstl</artifactId>
			<version>${owsi-core.jstl.version}</version>
		</dependency>
		
	</dependencies>
	
</project>
