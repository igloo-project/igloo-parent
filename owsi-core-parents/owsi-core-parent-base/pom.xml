<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	
	<groupId>fr.openwide.core.parents</groupId>
	<artifactId>owsi-core-parent-base</artifactId>
	<version>0.5.5-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<name>OWSI Core - Parent - Base</name>
	
	<properties>
		<jdk.version>1.6</jdk.version>
		
		<owsi-core.version>${project.version}</owsi-core.version>
		
		<owsi-core.spring.version>3.0.6.RELEASE</owsi-core.spring.version>
		<owsi-core.aspectj.version>1.6.10</owsi-core.aspectj.version>

		<owsi-core.hibernate-core.version>3.6.7.Final</owsi-core.hibernate-core.version>
		<owsi-core.hibernate-jpa-2.0-api.version>1.0.1.Final</owsi-core.hibernate-jpa-2.0-api.version>
		<owsi-core.hibernate-jpamodelgen.version>1.1.1.Final</owsi-core.hibernate-jpamodelgen.version>
		<owsi-core.c3p0.version>0.9.1.2</owsi-core.c3p0.version>
		<owsi-core.hibernate-ehcache.version>${owsi-core.hibernate-core.version}</owsi-core.hibernate-ehcache.version>
		<owsi-core.ehcache.version>2.3.1</owsi-core.ehcache.version>
		
		<owsi-core.postgresql.version>9.0-801.jdbc3</owsi-core.postgresql.version>
		<owsi-core.oracle10g.version>10.2.0.5</owsi-core.oracle10g.version>
		<owsi-core.mysql.version>5.1.14</owsi-core.mysql.version>
		
		<owsi-core.cglib.version>2.2</owsi-core.cglib.version>
		<owsi-core.javassist.version>3.12.1.GA</owsi-core.javassist.version>
		<owsi-core.asm.version>3.3.1</owsi-core.asm.version>
		
		<owsi-core.bindgen.version>2.23</owsi-core.bindgen.version>
		
		<owsi-core.spring-security.version>3.0.7.RELEASE</owsi-core.spring-security.version>
		
		<owsi-core.spring-ldap.version>1.3.1.RELEASE</owsi-core.spring-ldap.version>
		
		<owsi-core.hibernate-search.version>3.4.1.Final</owsi-core.hibernate-search.version>
		<owsi-core.lucene.version>3.1.0</owsi-core.lucene.version>
		
		<owsi-core.quartz.version>1.8.5</owsi-core.quartz.version>

		<owsi-core.commons-io.version>2.0.1</owsi-core.commons-io.version>
		<owsi-core.commons-lang.version>2.6</owsi-core.commons-lang.version>
		<owsi-core.commons-cli.version>1.2</owsi-core.commons-cli.version>
		<owsi-core.commons-codec.version>1.4</owsi-core.commons-codec.version>
		<owsi-core.commons-exec.version>1.1</owsi-core.commons-exec.version>
		
		<owsi-core.jta.version>1.1</owsi-core.jta.version>
		<owsi-core.javax-mail.version>1.4.4</owsi-core.javax-mail.version>
		
		<owsi-core.slf4j.version>1.6.1</owsi-core.slf4j.version>
		<owsi-core.log4j.version>1.2.16</owsi-core.log4j.version>
		
		<owsi-core.opencsv.version>2.1</owsi-core.opencsv.version>
		<owsi-core.freemarker.version>2.3.18</owsi-core.freemarker.version>
		<owsi-core.dom4j.version>1.6.1</owsi-core.dom4j.version>
		<owsi-core.poi.version>3.7</owsi-core.poi.version>
		<owsi-core.itext.version>2.1.5</owsi-core.itext.version>
		<owsi-core.json-lib.version>2.3</owsi-core.json-lib.version>
		<owsi-core.truezip.version>6.8.2</owsi-core.truezip.version>
		<owsi-core.xhtmlrenderer.version>R8</owsi-core.xhtmlrenderer.version>
		<owsi-core.jfreechart.version>1.0.13</owsi-core.jfreechart.version>
		<owsi-core.imageinfo.version>1.9</owsi-core.imageinfo.version>
		
		<owsi-core.junit.version>4.8.2</owsi-core.junit.version>
		
		<owsi-core.jersey.version>1.0.3.1</owsi-core.jersey.version>
		<owsi-core.jstl.version>1.2</owsi-core.jstl.version>
		<owsi-core.jsp-api.version>2.0</owsi-core.jsp-api.version>
		<owsi-core.servlet-api.version>2.5</owsi-core.servlet-api.version>
		<owsi-core.sitemesh.version>2.4.2</owsi-core.sitemesh.version>
		<owsi-core.taglibs-standard.version>1.1.2</owsi-core.taglibs-standard.version>
		<owsi-core.javax-validation-api.version>1.0.0.GA</owsi-core.javax-validation-api.version>
		<owsi-core.wicket.version>1.4.19</owsi-core.wicket.version>
		<owsi-core.wiquery.version>1.2.3</owsi-core.wiquery.version>
		<owsi-core.lesscss-engine.version>1.0.41</owsi-core.lesscss-engine.version>
		
		<owsi-core.maven-compiler-plugin.version>2.3.2</owsi-core.maven-compiler-plugin.version>
		<owsi-core.maven-surefire-plugin.version>2.8.1</owsi-core.maven-surefire-plugin.version>
		<owsi-core.maven-install-plugin.version>2.3.1</owsi-core.maven-install-plugin.version>
		<owsi-core.maven-release-plugin.version>2.2.1</owsi-core.maven-release-plugin.version>
		<owsi-core.maven-war-plugin.version>2.1.1</owsi-core.maven-war-plugin.version>
		<owsi-core.maven-assembly-plugin.version>2.2.1</owsi-core.maven-assembly-plugin.version>
		<owsi-core.maven-processor-plugin.version>2.0.2</owsi-core.maven-processor-plugin.version>
		<owsi-core.maven-jar-plugin.version>2.3.1</owsi-core.maven-jar-plugin.version>
	</properties>
	
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>${owsi-core.maven-compiler-plugin.version}</version>
					<configuration>
						<source>${jdk.version}</source>
						<target>${jdk.version}</target>
						<encoding>UTF-8</encoding>
						<compilerArgument>-proc:none</compilerArgument>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-surefire-plugin</artifactId>
					<version>${owsi-core.maven-surefire-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-war-plugin</artifactId>
					<version>${owsi-core.maven-war-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-install-plugin</artifactId>
					<version>${owsi-core.maven-install-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<version>${owsi-core.maven-release-plugin.version}</version>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>${owsi-core.maven-assembly-plugin.version}</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<profiles>
		<profile>
			<activation>
				<property>
					<name>distribution</name>
					<value>owsi-core-release</value>
				</property>
			</activation>
			<distributionManagement>
				<repository>
					<id>nexus-owsi-core</id>
					<name>Nexus OWSI Core</name>
					<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-core</url>
				</repository>
				<snapshotRepository>
					<id>nexus-owsi-core-snapshots</id>
					<name>Nexus OWSI Core Snapshots</name>
					<url>https://projects.openwide.fr/services/nexus/content/repositories/owsi-core-snapshots</url>
				</snapshotRepository>
			</distributionManagement>
		</profile>
	</profiles>
	
</project>
